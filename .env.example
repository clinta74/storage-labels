# PostgreSQL Database Configuration
POSTGRES_PASSWORD=your_secure_password_here

# JWT Secret (generate with: openssl rand -base64 32)
# IMPORTANT: Change this in production!
JWT_SECRET=your-secure-random-key-here-minimum-32-characters-long

# Default Admin Credentials (created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeMe123!
ADMIN_EMAIL=admin@localhost

# Authentication Mode: Local or None
# Local = ASP.NET Core Identity with JWT tokens
# None = No authentication (trusted networks only)
AUTHENTICATION_MODE=Local

